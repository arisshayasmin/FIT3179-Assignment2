{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Total Medal Count Won By Each Countries",
  "width": 750,
  "height": 200,
  "title": "Top Countries with Highest Total Medal Count Overall",
  "data": {
    "url": "https://raw.githubusercontent.com/arisshayasmin/FIT3179-Assignment2/main/data/cleaned/olympics_total_medals.csv"
  },
  "mark": { "type": "area", "strokeWidth": 3, "color": "#1c95d0" },
  "encoding": {
    "x": { "field": "Country", "type": "ordinal" },
    "y": {
      "field": "Total Medals",
      "type": "quantitative",
      "scale": {
        "domain": [0, 3000]
      }
    }
  }
}
